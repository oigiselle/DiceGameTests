<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.MainPage">

                <StackLayout>
        <StackLayout RadioButtonGroup.GroupName="Dice">

            <Label Text="Select a die:"/>
            <RadioButton x:Name="d4" Content="d4" />
            <RadioButton x:Name="d6" Content="d6" />
            <RadioButton x:Name="d8" Content="d8" />
            <RadioButton x:Name="d10" Content="d10" />
            <RadioButton x:Name="d12" Content="d12" />
            <RadioButton x:Name="d20" Content="d20" />
        </StackLayout>
        <Button Text="Display one result" Clicked="DisplayOne"/>
        <Button Text="Display two results" Clicked="DisplayTwo" />
        <Label FontAttributes="Bold" FontSize="Medium" TextColor="Black" HorizontalOptions="Center" x:Name="Result1" />
   
        <Label FontAttributes="Bold" FontSize="Medium" TextColor="Black" HorizontalOptions="Center" x:Name="Result2" IsVisible="false" />
    </StackLayout>

</ContentPage>
